<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c='urn:import:com.google.gwt.user.cellview.client'
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="urn:ui:com.google.gwt.uibinder http://google-web-toolkit.googlecode.com/svn-history/trunk/user/src/com/google/gwt/uibinder/resources/UiBinder.xsd"
	xmlns:ep="urn:import:org.xydra.webadmin.gwt.client.widgets.editorpanel"
	xmlns:st="urn:import:org.xydra.webadmin.gwt.client.widgets.selectiontree">

	<ui:style>
		@external .objectChangeTitle;
		.objectChangeTitle {
		min-height:
		80px;
		min-width: 150px;
		margin: 2px !important;
		padding: 2px !important;
		font-weight: bold;
		font-size: 18px;
		}
		@external
		.objectChangesPanelBorder;
		.objectChangesPanelBorder
		{
		border : 1px solid
		black !important;
		}
		@external .fieldChangesStyle;
		.fieldChangesStyle {
		min-width: 500px;
		margin: 2px !important;
		padding: 2px !important;
		font-size: 16px;
		border-left : 1px solid black !important;
		min-height: 80px;
		border-spacing: 2px !important;
		}
	</ui:style>

	<g:HorizontalPanel verticalAlignment="MIDDLE" styleName="{style.objectChangesPanelBorder}">

		<g:HorizontalPanel ui:field="objectIdPanel"
			styleName="{style.objectChangeTitle}">
		</g:HorizontalPanel>

		<g:VerticalPanel ui:field="fieldChangesPanel" verticalAlignment="MIDDLE"
			styleName="{style.fieldChangesStyle}">
		</g:VerticalPanel>
	</g:HorizontalPanel>
</ui:UiBinder> 

