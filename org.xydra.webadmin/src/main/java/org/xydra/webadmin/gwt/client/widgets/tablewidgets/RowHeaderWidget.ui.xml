<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c='urn:import:com.google.gwt.user.cellview.client'
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="urn:ui:com.google.gwt.uibinder http://google-web-toolkit.googlecode.com/svn-history/trunk/user/src/com/google/gwt/uibinder/resources/UiBinder.xsd"
	xmlns:w="urn:import:org.xydra.webadmin.gwt.client.widgets" xmlns:ak="urn:import:org.xydra.webadmin.gwt.client.widgets.version2">
	
	<ui:style>
	
	@external .rowHeaderExpandStyle;
		.rowHeaderExpandStyle {
		height: 148px;
		width: 15px;
		margin: 1px;
		padding: 2px;
		border-spacing: 1px;
		
		}
		
		.idLabelStyle
		{
			text-align: center;
			font-size: 20px; 
		}
		
	</ui:style> 
	
	
	
	<g:HorizontalPanel verticalAlignment="middle" horizontalAlignment="center" styleName="rowHeaderStyle cellHeight rowHeaderWidth">
	<g:VerticalPanel ui:field="panel" verticalAlignment="middle" horizontalAlignment="center">
	
		<g:HTML ui:field="idLabel" styleName="{style.idLabelStyle}"></g:HTML>
		<g:Label ui:field="revisionLabel" styleName="revisionLabelStyle" ></g:Label>
		<g:Button ui:field="removeObjectButton"> remove </g:Button>
		<g:Button ui:field="addFieldButton"> add field </g:Button>
		
	</g:VerticalPanel>
		
		<g:Button ui:field="expandButton" styleName="{style.rowHeaderExpandStyle}">o p e n</g:Button>
	
	</g:HorizontalPanel>
</ui:UiBinder> 

