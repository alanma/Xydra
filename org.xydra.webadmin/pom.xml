<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>org.xydra</groupId>
	<artifactId>webadmin</artifactId>
	<version>0.1.4-SNAPSHOT</version>
	<packaging>jar</packaging>
	<name>Xydra Webadmin</name>

	<parent>
		<groupId>org.xydra</groupId>
		<artifactId>maven-root</artifactId>
		<version>2011.01.22</version>
	</parent>
	
	<properties>
		
		<!-- convenience to define GWT version in one place -->
		<gwt.version>2.0.4</gwt.version>
		
		<!-- define a transient output directory for gwt -->
		<gwt.output.directory>./war</gwt.output.directory>
		
		<!-- the value of the rename-to attribute in your GWT module configuration -->
		<gwt.module.alias>XydraEditor</gwt.module.alias>
		
		<gwt.compiler.force>true</gwt.compiler.force>
		
	</properties>	
	
	<repositories>
		<!-- xydra repo -->
		<repository>
			<id>xydra-repo</id>
			<url>
				https://xydra.googlecode.com/svn/repository
			</url>
			<releases>
				<enabled>true</enabled>
				<updatePolicy>always</updatePolicy>
				<checksumPolicy>fail</checksumPolicy>
			</releases>
		</repository>
		<!-- xydra snapshots -->
		<repository>
			<id>xydra-snap</id>
			<url>
				https://xydra.googlecode.com/svn/snapshots
			</url>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
			<releases>
				<enabled>false</enabled>
			</releases>
		</repository>
	</repositories>
	
	<dependencies>
		
		<!-- test -->
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<scope>test</scope>
		</dependency>
		
		<!-- test server -->
		<dependency>
			<groupId>org.mortbay.jetty</groupId>
			<artifactId>jetty</artifactId>
			<version>6.1.11</version>
		</dependency>
		
		<!-- RESTless -->
		<dependency>
			<groupId>org.xydra</groupId>
			<artifactId>restless</artifactId>
			<version>0.1.4-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.xydra</groupId>
			<artifactId>restless</artifactId>
			<version>0.1.4-SNAPSHOT</version>
			<type>test-jar</type>
		</dependency>

		<!--  Xydra Core -->
		<dependency>
			<groupId>org.xydra</groupId>
			<artifactId>core</artifactId>
			<version>0.1.4-SNAPSHOT</version>
		</dependency>
		
		<!--  Xydra GAE -->
		<dependency>
			<groupId>org.xydra</groupId>
			<artifactId>gae</artifactId>
			<version>0.1.4-SNAPSHOT</version>
		</dependency>
		
		<!-- FileUpload utilities from http://commons.apache.org/fileupload/ -->
		<dependency>
			<groupId>commons-fileupload</groupId>
			<artifactId>commons-fileupload</artifactId>
			<version>1.2</version>
		</dependency>
		
	</dependencies>
	
	<build>
		
		<!-- Compile classes into the war transient directory for hosted mode live editing -->
		<!-- This confuses the maven site generation -->
		<outputDirectory>${gwt.output.directory}/WEB-INF/classes</outputDirectory>
		
		<plugins>
			
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>${maven.compiler.source}</source>
					<target>${maven.compiler.target}</target>
					<encoding>UTF-8</encoding>
					<!-- Fix for GWT issue #3439 -->
					<excludes>
						<exclude>javax/servlet/**</exclude>
					</excludes>
				</configuration>
			</plugin>
			
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.2</version>
				<executions>
					<!-- This execution copies the war folder to the gwt transient output directory -->
					<execution>
						<id>war-folder-creation</id>
						<phase>process-resources</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<copy todir="${gwt.output.directory}">
									<fileset dir="${basedir}/src/main/webapp" />
								</copy>
							</tasks>
						</configuration>
					</execution>
				</executions>
			</plugin>
			
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<!-- Include GWT compiler output in the war -->
				<!--<configuration>
					<webResources>
						<resource>
							<directory>${gwt.output.directory}/${gwt.module.alias}</directory>
							<targetPath>${gwt.module.alias}</targetPath>
						</resource>
					</webResources>
				</configuration>-->
			</plugin>
			
		</plugins>
	</build>
	
	<distributionManagement>
		<!--
			Add this to settings.xml <server> <id>xydra-repo</id>
			<username>xamde</username> <password>********</password> </server>
			<server> <id>xydra-snap</id> <username>xamde</username>
			<password>********</password> </server> <server> <id>xydra-site</id>
			<username>xamde</username> <password>********</password> </server>
		-->
		<repository>
			<id>xydra-repo</id>
			<url>svn:https://xydra.googlecode.com/svn/repository</url>
		</repository>
		<snapshotRepository>
			<id>xydra-snap</id>
			<url>svn:https://xydra.googlecode.com/svn/snapshots</url>
		</snapshotRepository>
		<site>
			<id>xydra-site</id>
			<url>scp://${xydra.site}/${artifactId}</url>
		</site>
	</distributionManagement>

	<scm>
		<connection>svn:https://xydra.googlecode.com/svn/trunk/org.xydra.webadmin</connection>
		<developerConnection>svn:https://xydra.googlecode.com/svn/trunk/org.xydra.webadmin</developerConnection>
	</scm>
	
	<!-- Activate with ".... -P gae" -->
	<profiles>
		<profile>
			<id>gae</id>

			<pluginRepositories>

				<!-- If this repo is active, GAE plugin is crap. <pluginRepository> <id>Codehaus 
					Mojo Snapshot</id> <url>http://snapshots.repository.codehaus.org/</url> </pluginRepository> -->

				<!-- Google App Engine (GAE) plugin repository -->
				<pluginRepository>
					<id>gae-plugin-repo</id>
					<url>http://maven-gae-plugin.googlecode.com/svn/repository/</url>
				</pluginRepository>

			</pluginRepositories>
			<repositories>
				<!-- for GAE stuff ? -->
				<repository>
					<id>maven2-repository.dev.java.net</id>
					<url>http://download.java.net/maven/2</url>
					<layout>default</layout>
				</repository>

				<repository>
					<id>mvnsearch</id>
					<url>http://www.mvnsearch.org/maven2/</url>
				</repository>

			</repositories>

			<build>
				<plugins>
					<!-- Google App Engine (GAE) plugin -->
					<plugin>
						<groupId>net.kindleit</groupId>
						<artifactId>maven-gae-plugin</artifactId>
						<version>0.8.2</version>
						<configuration>
							<sdkDir>${gae.home}</sdkDir>
							<appDir>${project.build.directory}/war</appDir>
							<unpackVersion>${gae.version}</unpackVersion>
							<splitJars>true</splitJars>
							<keepTempUploadDir>true</keepTempUploadDir>
						</configuration>
						<dependencies>
							<dependency>
								<groupId>net.kindleit</groupId>
								<artifactId>gae-runtime</artifactId>
								<version>${gae.version}</version>
								<type>pom</type>
							</dependency>
						</dependencies>
					</plugin>
					<!-- <plugin> <groupId>org.codehaus.mojo</groupId> <artifactId>gwt-maven-plugin</artifactId> 
						<version>1.1</version> <configuration> <module>com.calpano.goaltaxi</module> 
						<runTarget>com.calpano.goaltaxi.rest.GoalTaxiApp</runTarget> </configuration> 
						</plugin> -->
				</plugins>
			</build>
		</profile>
	</profiles>
	
	
</project>
