<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>org.xydra</groupId>
	<artifactId>webadmin</artifactId>
	<version>${xydra.version}</version>
	<!-- 'war' for web deployment, 'jar' for maven deploy -->
	<!--  For embedding, make sure to have the static file /s/xml-to-html.xsl 
	and /s/xyadmin.css 
	
	/!\
	If you do this wrong and try to deploy, you'll get an exception like:
	com.google.apphosting.utils.config.AppEngineWebXmlReader readAppEngineWebXml
	Received exception processing .../webadmin-0.1.5-SNAPSHOT\WEB-INF/appengine-web.xml
	com.google.apphosting.utils.config.AppEngineConfigException: Could not locate ...\webadmin-0.1.5-SNAPSHOT\WEB-INF\appengine-web.xml
	Bad configuration: Could not locate ... Please see the logs
	-->
	<packaging>jar</packaging>
	<name>Xydra Webadmin</name>

	<parent>
		<groupId>org.xydra</groupId>
		<artifactId>maven-root</artifactId>
		<version>2011.12.05</version>
	</parent>

	<properties>

		<!-- define a transient output directory for gwt -->
<!-- 		<gwt.output.directory>${project.build.directory}/war</gwt.output.directory>
 -->
		<!-- the value of the rename-to attribute in your GWT module configuration -->
<!-- 		<gwt.module.alias>gwt</gwt.module.alias>
		<gwt.compiler.force>true</gwt.compiler.force>
 -->
	</properties>

	<repositories>
		<!-- xydra repo -->
		<repository>
			<id>xydra-repo</id>
			<url>
				https://xydra.googlecode.com/svn/repository
			</url>
			<releases>
				<enabled>true</enabled>
				<updatePolicy>always</updatePolicy>
				<checksumPolicy>fail</checksumPolicy>
			</releases>
		</repository>
	</repositories>

	<dependencies>

		<!-- test server -->
		<dependency>
			<groupId>org.mortbay.jetty</groupId>
			<artifactId>jetty</artifactId>
		</dependency>

		<dependency>
			<groupId>org.xydra</groupId>
			<artifactId>csv</artifactId>
		</dependency>
		<dependency>
			<groupId>org.xydra</groupId>
			<artifactId>json</artifactId>
		</dependency>

		<!-- RESTless -->
		<dependency>
			<groupId>org.xydra</groupId>
			<artifactId>restless</artifactId>
		</dependency>
		<dependency>
			<groupId>org.xydra</groupId>
			<artifactId>restless</artifactId>
			<type>test-jar</type>
		</dependency>

		<!-- Xydra Core -->
		<dependency>
			<groupId>org.xydra</groupId>
			<artifactId>core</artifactId>
		</dependency>
		<dependency>
			<groupId>org.xydra</groupId>
			<artifactId>core</artifactId>
			<type>test-jar</type>
			<scope>compile</scope>
		</dependency>

		<!-- Xydra GAE -->
		<dependency>
			<groupId>org.xydra</groupId>
			<artifactId>gae</artifactId>
		</dependency>

		<!-- FileUpload utilities from http://commons.apache.org/fileupload/ -->
		<dependency>
			<groupId>commons-fileupload</groupId>
			<artifactId>commons-fileupload</artifactId>
			<version>1.2</version>
		</dependency>

	</dependencies>

	<distributionManagement>
		<!-- Add this to settings.xml <server> <id>xydra-repo</id> <username>xamde</username> 
			<password>********</password> </server> <server> <id>xydra-snap</id> <username>xamde</username> 
			<password>********</password> </server> <server> <id>xydra-site</id> <username>xamde</username> 
			<password>********</password> </server> -->
		<repository>
			<id>xydra-repo</id>
			<url>svn:https://xydra.googlecode.com/svn/repository</url>
		</repository>
		<snapshotRepository>
			<id>xydra-snap</id>
			<url>svn:https://xydra.googlecode.com/svn/snapshots</url>
		</snapshotRepository>
		<site>
			<id>xydra-site</id>
			<url>scp://${xydra.site}/${artifactId}</url>
		</site>
	</distributionManagement>

	<scm>
		<connection>svn:https://xydra.googlecode.com/svn/trunk/org.xydra.webadmin</connection>
		<developerConnection>svn:https://xydra.googlecode.com/svn/trunk/org.xydra.webadmin</developerConnection>
	</scm>

</project>
