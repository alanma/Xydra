<!DOCTYPE module PUBLIC "//gwt-module/" "http://google-web-toolkit.googlecode.com/svn/tags/1.6.2/distro-source/core/src/gwt-module.dtd">
<module>

	<super-source path="emulate" />
	
	<!-- Inherit the core Web Toolkit stuff. -->
	<inherits name='com.google.gwt.user.User'/>
	
	<!-- Inherit the core GWT XML module. -->
	<inherits name='com.google.gwt.xml.XML'/>
	
	<!-- Inherit the core GWT HTTP module. -->
	<inherits name="com.google.gwt.http.HTTP"/>
	
    <!-- Inherit Xydra Logging -->
    <inherits name='org.xydra.log.Xlog'/>

	<!-- Inherit the Xydra Core -->
	<inherits name='org.xydra.store.XydraStore'/>
	
	<source path="">
		<exclude name="**/*Test.java" />
		<exclude name="TestServer.java" />
		<exclude name="GwtTestServer.java" />
		<exclude name="ProxyServlet.java" />
	</source>
	
</module>
